    <field name="empty_roster_photo" type="fmmedia" label="COM_FMMANAGER_CONFIG_EMPTY_ROSTER_PHOTO" description="COM_FMMANAGER_CONFIG_EMPTY_ROSTER_PHOTO_DESC" directory="rosters" default="images/rosters/roster.png" />
