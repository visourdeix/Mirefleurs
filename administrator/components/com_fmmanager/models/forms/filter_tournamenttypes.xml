<?xml version="1.0" encoding="utf-8"?>
<form>
  <fields name="filter" addfieldpath="/libraries/FootManager/Form/fields">
    <field name="search" type="text" hint="JSEARCH_FILTER" class="js-stools-search-string" />
  </fields>
  <fields name="list">
    <field name="fullordering" type="list" label="JGLOBAL_SORT_BY" description="JGLOBAL_SORT_BY" onchange="this.form.submit();" default="ordering ASC">
      <option value="">JGLOBAL_SORT_BY</option>
      <option value="label ASC">COM_FMMANAGER_SORT_NAME_ASC</option>
      <option value="label DESC">COM_FMMANAGER_SORT_NAME_DESC</option>
      <option value="has_ranking ASC">COM_FMMANAGER_SORT_RANKING_ASC</option>
      <option value="has_ranking DESC">COM_FMMANAGER_SORT_RANKING_DESC</option>
      <option value="by_match ASC">COM_FMMANAGER_SORT_BY_MATCH_ASC</option>
      <option value="by_match DESC">COM_FMMANAGER_SORT_BY_MATCH_DESC</option>
      <option value="ordering ASC">COM_FMMANAGER_SORT_ORDERING_ASC</option>
      <option value="ordering DESC">COM_FMMANAGER_SORT_ORDERING_DESC</option>
      <option value="id ASC">COM_FMMANAGER_SORT_ID_ASC</option>
      <option value="id DESC">COM_FMMANAGER_SORT_ID_DESC</option>
    </field>

    <field name="limit" type="limitbox" class="input-mini" default="25" label="COM_CONTENT_LIST_LIMIT" description="COM_CONTENT_LIST_LIMIT_DESC" onchange="this.form.submit();" />
  </fields>
</form>