<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
  <name>com_fmcontenttemplates</name>
  <author>Stéphane ANDRE</author>
  <creationDate>December 2015</creationDate>
  <copyright>(C) 2015 Stéphane ANDRE. All rights reserved.</copyright>
  <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
  <authorEmail>andre.cs2i@gmail.com</authorEmail>
  <authorUrl/>
  <version>1.0.0</version>
  <description>COM_FMCONTENTTEMPLATES_XML_DESCRIPTION</description>
  <!-- Runs on install/uninstall/update; New in 2.5 -->
  <!-- Dossiers utilisés côté media. -->
  <!-- Fichiers et dossiers utilisés côté administration. -->
  <administration>
    <!-- /// FILES /// -->
    <files folder="admin">
      <folder>controllers</folder>
      <folder>models</folder>
      <folder>views</folder>
      <filename>controller.php</filename>
      <filename>fmcontenttemplates.php</filename>
      <filename>index.html</filename>
    </files>
    <!-- /// LANGUAGES /// -->
    <languages folder="admin">
      <language tag="fr-FR">language/fr-FR/fr-FR.com_fmcontenttemplates.ini</language>
      <language tag="fr-FR">language/fr-FR/fr-FR.com_fmcontenttemplates.sys.ini</language>
    </languages>
  </administration>
  <!-- /// INSTALL SCRIPT /// -->
  <scriptfile>install.script.php</scriptfile>
  <!-- /// FILES /// -->
  <!-- /// MEDIA /// -->
  <media destination="com_fmcontenttemplates" folder="media">
    <folder>js</folder>
    <filename>index.html</filename>
  </media>
</extension>
