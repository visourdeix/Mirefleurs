<?xml version="1.0" encoding="utf-8"?>
<metadata>
  <layout title="com_fmevents_calendar_view_default_title" option="com_fmevents_calendar_view_default_option">
    <message>
      <![CDATA[com_fmevents_calendar_view_default_desc]]>
    </message>
  </layout>

  <!-- Add fields to the request variables for the layout. -->
  <fields name="request">
    <fieldset name="request"
			addfieldpath="/administrator/components/com_fmevents/models/fields">
      <field name="types" type="typeslist"
             multiple="true"
label="COM_FMEVENTS_FIELD_TYPES"
description="COM_FMEVENTS_FIELD_TYPES_DESC">
        <option value="all">FMLIB_ALL_3</option>
      </field>
      <field name="categories" type="categorieslist"
             multiple="true"
				label="COM_FMEVENTS_FIELD_CATEGORIES"
				description="COM_FMEVENTS_FIELD_CATEGORIES_DESC">
        <option value="all">FMLIB_ALL_4</option>
      </field>
    </fieldset>
  </fields>

  <!-- Add fields to the parameters object for the layout. -->
  <fields name="params">

    <!-- Basic options. -->
    <fieldset name="basic"
			label="COM_FMGALLERY_ATTRIBS_SETTINGS" addfieldpath="/libraries/FootManager/Form/fields">
      <field
				name="show_filters"
				type="list"
				class="chzn-color"
				label="COM_FMEVENTS_SHOW_FILTERS"
				description="COM_FMEVENTS_SHOW_FILTERS_DESC">
        <option value="">JGLOBAL_USE_GLOBAL</option>
        <option value="1">JSHOW</option>
        <option value="0">JHIDE</option>
      </field>
    </fieldset>
  </fields>
</metadata>