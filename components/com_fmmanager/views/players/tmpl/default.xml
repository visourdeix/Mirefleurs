<?xml version="1.0" encoding="utf-8"?>
<metadata>
  <layout title="com_fmmanager_players_view_default_title" option="com_fmmanager_players_view_default_option">
    <message>
      <![CDATA[com_fmmanager_players_view_default_desc]]>
    </message>
  </layout>

  <!-- Add fields to the request variables for the layout. -->
  <fields name="request">
    <fieldset name="request"
			addfieldpath="/administrator/components/com_fmmanager/models/fields">

      <field name="id" type="rosterslist"
				label="COM_FMMANAGER_FIELD_ROSTER"
             class="input-medium"
             required="true"
				description="COM_FMMANAGER_FIELD_ROSTER_DESC" />
    </fieldset>
  </fields>

  <!-- Add fields to the parameters object for the layout. -->
  <fields name="params">

    <!-- Basic options. -->
    <fieldset name="basic"
			label="FMLIB_TAB_PARAMS" addfieldpath="/libraries/FootManager/Form/fields">
      <field name="players_group_by" type="list"
            label="COM_FMMANAGER_GROUP_BY"
            description="COM_FMMANAGER_GROUP_BY_DESC">
        <option value="">JGLOBAL_USE_GLOBAL</option>
        <option value="0">FMLIB_NONE_1</option>
        <option value="positions">COM_FMMANAGER_FIELD_POSITION</option>
        <option value="categories">COM_FMMANAGER_FIELD_CATEGORY</option>
      </field>
      <field
				name="players_show_outclassed"
				type="list"
				class="chzn-color"
				label="COM_FMMANAGER_SHOW_OUTCLASSED"
				description="COM_FMMANAGER_SHOW_OUTCLASSED_DESC">
        <option value="">JGLOBAL_USE_GLOBAL</option>
        <option value="1">JSHOW</option>
        <option value="0">JHIDE</option>
      </field>
      <field
				name="players_show_category"
				type="list"
				class="chzn-color"
				label="COM_FMMANAGER_SHOW_CATEGORY"
				description="COM_FMMANAGER_SHOW_CATEGORY_DESC">
        <option value="">JGLOBAL_USE_GLOBAL</option>
        <option value="1">JSHOW</option>
        <option value="0">JHIDE</option>
      </field>
      <field
				name="players_show_position"
				type="list"
				class="chzn-color"
				label="COM_FMMANAGER_SHOW_POSITION"
				description="COM_FMMANAGER_SHOW_POSITION_DESC">
        <option value="">JGLOBAL_USE_GLOBAL</option>
        <option value="1">JSHOW</option>
        <option value="0">JHIDE</option>
      </field>
      <field
       name="players_show_contacts"
       type="list"
       class="chzn-color"
       label="COM_FMMANAGER_SHOW_CONTACTS"
       description="COM_FMMANAGER_SHOW_CONTACTS_DESC">
        <option value="">JGLOBAL_USE_GLOBAL</option>
        <option value="1">JSHOW</option>
        <option value="0">JHIDE</option>
      </field>
    </fieldset>
  </fields>
</metadata>