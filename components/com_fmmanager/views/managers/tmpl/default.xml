<?xml version="1.0" encoding="utf-8"?>
<metadata>
  <layout title="com_fmmanager_managers_view_default_title" option="com_fmmanager_managers_view_default_option">
    <message>
      <![CDATA[com_fmmanager_managers_view_default_desc]]>
    </message>
  </layout>

  <!-- Add fields to the request variables for the layout. -->
  <fields name="request">
    <fieldset name="request"
			addfieldpath="/administrator/components/com_fmmanager/models/fields">

      <field name="id" type="seasonslist"
				label="COM_FMMANAGER_FIELD_SEASON"
             editLink=""
             required="true"
				description="COM_FMMANAGER_FIELD_SEASON_DESC" />
    </fieldset>
  </fields>

  <!-- Add fields to the parameters object for the layout. -->
  <fields name="params">

    <!-- Basic options. -->
    <fieldset name="basic"
			label="FMLIB_TAB_PARAMS" addfieldpath="/libraries/FootManager/Form/fields">

      <field name="managers_group_by" type="list"
            label="COM_FMMANAGER_GROUP_BY"
            description="COM_FMMANAGER_GROUP_BY_DESC">
        <option value="">JGLOBAL_USE_GLOBAL</option>
        <option value="0">FMLIB_NONE_1</option>
        <option value="functions">COM_FMMANAGER_FIELD_FUNCTION</option>
        <option value="genders">COM_FMMANAGER_FIELD_GENDER</option>
      </field>

      <field
       name="managers_show_managers"
       type="list"
       class="chzn-color"
       label="COM_FMMANAGER_SHOW_MANAGERS"
       description="COM_FMMANAGER_SHOW_MANAGERS_DESC">
        <option value="">JGLOBAL_USE_GLOBAL</option>
        <option value="1">JSHOW</option>
        <option value="0">JHIDE</option>
      </field>

      <field
       name="managers_show_function"
       type="list"
       class="chzn-color"
       label="COM_FMMANAGER_SHOW_FUNCTION"
       description="COM_FMMANAGER_SHOW_FUNCTION_DESC">
        <option value="">JGLOBAL_USE_GLOBAL</option>
        <option value="1">JSHOW</option>
        <option value="0">JHIDE</option>
      </field>

      <field
 name="managers_show_contacts"
 type="list"
 class="chzn-color"
 label="COM_FMMANAGER_SHOW_CONTACTS"
 description="COM_FMMANAGER_SHOW_CONTACTS_DESC">
        <option value="">JGLOBAL_USE_GLOBAL</option>
        <option value="1">JSHOW</option>
        <option value="0">JHIDE</option>
      </field>
    </fieldset>
  </fields>
</metadata>