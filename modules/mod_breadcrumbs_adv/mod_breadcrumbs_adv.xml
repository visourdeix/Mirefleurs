<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.0"
	client="site"
	method="upgrade">
	<name>mod_breadcrumbs_adv</name>
	<author>UWiX</author>
	<creationDate>June 2015</creationDate>
	<copyright>Copyright (C) 2013 UWiX. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>meerinfo@uwix.nl</authorEmail>
	<authorUrl>www.uwix.nl</authorUrl>
	<version>3.2</version>
	<description>MOD_BREADCRUMBS_ADV_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_breadcrumbs_adv">mod_breadcrumbs_adv.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_breadcrumbs_adv.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_breadcrumbs_adv.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_breadcrumbs_adv.sys.ini</language>
		<language tag="nl-NL">language/nl-NL/nl-NL.mod_breadcrumbs_adv.ini</language>
		<language tag="nl-NL">language/nl-NL/nl-NL.mod_breadcrumbs_adv.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_BREADCRUMBS" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="showHere"
					type="radio"
					class="btn-group"
					default="1"
					label="MOD_BREADCRUMBS_ADV_FIELD_SHOWHERE_LABEL"
					description="MOD_BREADCRUMBS_ADV_FIELD_SHOWHERE_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
				<field
					name="showHome"
					type="radio"
					class="btn-group"
					default="1"
					label="MOD_BREADCRUMBS_ADV_FIELD_SHOWHOME_LABEL"
					description="MOD_BREADCRUMBS_ADV_FIELD_SHOWHOME_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
				<field 
					name="clickHome" 
					type="radio" 
					class="btn-group"
					default="0" 
					label="MOD_BREADCRUMBS_ADV_CLICKHOME_LBL" 
					description="MOD_BREADCRUMBS_ADV_CLICKHOME_DESC">
					<option 
						value="0">JNO</option>
					<option 
						value="1">JYES</option>
				</field>
				
				<field
					name="homeText"
					type="text"
					label="MOD_BREADCRUMBS_ADV_FIELD_HOMETEXT_LABEL"
					description="MOD_BREADCRUMBS_ADV_FIELD_HOMETEXT_DESC" />
				<field 
					name="homePath" 
					type="text" 
					default="" 
					size="50" 
					label="MOD_BREADCRUMBS_ADV_HOMEPATH_LBL" 
					description="MOD_BREADCRUMBS_ADV_HOMEPATH_DESC" />
				<field
					name="showLast"
					type="radio"
					class="btn-group"
					default="1"
					label="MOD_BREADCRUMBS_ADV_FIELD_SHOWLAST_LABEL"
					description="MOD_BREADCRUMBS_ADV_FIELD_SHOWLAST_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>

				<field 
					name="cutLast" 
					type="radio" 
					class="btn-group" 
					default="0" 
					label="MOD_BREADCRUMBS_ADV_CUTLAST_LBL" 
					description="MOD_BREADCRUMBS_ADV_CUTLAST_DESC">
					<option 
						value="0">JNO</option>
					<option 
						value="1">JYES</option>
				</field>
				<field 
					name="cutAt" 
					type="text" 
					default="10" 
					label="MOD_BREADCRUMBS_ADV_CUTAT_LBL" 
					description="MOD_BREADCRUMBS_ADV_CUTAT_DESC" />
				<field 
					name="cutChar" 
					type="text" 
					default="..." 
					label="MOD_BREADCRUMBS_ADV_CUTCHAR_LBL" 
					description="MOD_BREADCRUMBS_ADV_CUTCHAR_DESC" />
				
				<field
					name="separator"
					type="text"
					label="MOD_BREADCRUMBS_ADV_FIELD_SEPARATOR_LABEL"
					description="MOD_BREADCRUMBS_ADV_FIELD_SEPARATOR_DESC" />
					
				<field 
					name="padLeft" 
					type="text" 
					default="0" 
					label="MOD_BREADCRUMBS_ADV_PADLEFT_LBL" 
					description="MOD_BREADCRUMBS_ADV_PADLEFT_DESC" />
					
			</fieldset>

			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
